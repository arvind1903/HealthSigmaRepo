<?xml version="1.0" encoding= "UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

  <appender name="stdout" class="org.apache.log4j.ConsoleAppender">
    <param name="Threshold" value="trace"/>
		<layout class="org.apache.log4j.PatternLayout">
		  <param name="ConversionPattern" value="%d %p [%.200l] - &lt;%m&gt;%n"/>
		</layout>
  </appender>


  <appender name="psxlogs" class="org.apache.log4j.RollingFileAppender">
		<param name="Threshold" value="trace"/>
		<param name="Append" value="true"/>
		<param name="MaxFileSize" value="1024KB"/>
		<param name="MaxBackupIndex" value="5"/>
		<param name="ImmediateFlush" value="true"/>
		<param name="File" value="c:/logs/wcrs.log"/> 
		<layout class="org.apache.log4j.PatternLayout">
		  <param name="ConversionPattern" value="%d %p [%c] - %m%n"/>
		</layout>
  </appender>

 <!-- specify the logging level for loggers from other libraries -->
    <logger name="com.opensymphony">
    	<level value="INFO" />
    </logger>

  <logger name="com.posidex">
		<level value="TRACE"/>
		<appender-ref ref="psxlogs"/>
  </logger>
	<logger name="org.apache">
	   <level value="ERROR"/>
 		 <appender-ref ref="stdout"/>
	</logger>
	
  <root>
		<priority value="INFO"/>
		<appender-ref ref="stdout"/>
  </root>

</log4j:configuration>

